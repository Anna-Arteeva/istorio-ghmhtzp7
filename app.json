{
  "expo": {
    "name": "Istorio",
    "slug": "istorio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/icon-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "rgba(29, 29, 34, 1)"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.istorio"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/android-monochrome.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.istorio"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  },
  "dependencies": {
    "expo-constants": "^14.0.0",
    "expo-font": "^10.0.0",
    "expo-localization": "^2.0.0",
    "expo-splash-screen": "^0.17.0",
    "expo-updates": "^0.14.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "0.68.2",
    "react-native-gesture-handler": "^2.5.0",
    "react-native-reanimated": "^3.0.0",
    "react-native-screens": "^3.15.0",
    "react-native-web": "0.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "babel-preset-expo": "^9.0.0",
    "metro-react-native-babel-preset": "^0.72.0",
    "react-native-svg": "^13.2.0",
    "typescript": "^4.4.4"
  }
} 